{
    "bert_model_name": "bert-large-cased",
    "bert_cache_dir": "./bert_cache/",
    "bert_dropout": 0.5,
    "use_extra_bert": true,
    "use_context_emb": true,
    "use_event_emb": true,
    "event_merge_by_type": true,
    "extra_bert": -3,
    "global_features": [
        "role_role",
        "event_role_num",
        "multi_role",
        "event_role_event_role",
        "multi_event"
    ],
    "global_warmup": 0,
    "linear_dropout": 0.4,
    "linear_bias": true,
    "entity_hidden_num": 150,
    "mention_hidden_num": 150,
    "event_hidden_num": 600,
    "relation_hidden_num": 150,
    "role_hidden_num": 600,
    "use_entity_type": true,
    "beam_size": 20,
    "beta_v": 2,
    "beta_e": 2,
    "relation_mask_self": true,
    "relation_directional": false,
    "symmetric_relations": [],
    "train_file": "./data/ACE2005-Nest/train.json",
    "dev_file": "./data/ACE2005-Nest/dev.json",
    "test_file": "./data/ACE2005-Nest/test.json",
    "log_path": "./log/",
    "valid_pattern_path": "./resource/valid_patterns_nested",
    "trigger_representation_file": "./resource/event_representation/trigger_representation_nested_simple.json",
    "ignore_title": false,
    "ignore_first_header": false,
    "accumulate_step": 1,
    "batch_size": 8,
    "eval_batch_size": 8,
    "max_epoch": 30,
    "learning_rate": 0.001,
    "bert_learning_rate": 1e-05,
    "weight_decay": 0.001,
    "bert_weight_decay": 1e-05,
    "warmup_epoch": 5,
    "grad_clipping": 5.0,
    "use_gpu": true,
    "gpu_device": 0,
    "record_step": 1,
    "prompt_token": [
        "[EVENT]",
        "[ROLE]",
        "[NESTEDROLE]"
    ],
    "max_length": 315,
    "event_identity_only": false,
    "continue_train": false,
    "pretrain_model": "./",
    "start_epoch": 0,
    "use_te_avg": false,
    "use_prompt": true,
    "nested_mask": true
}
